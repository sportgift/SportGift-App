<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.ec.app.sportgiftapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_sportgift_app_icon"
            android:label="SportGift App"
            android:roundIcon="@mipmap/ic_launcher_sportgift_app_icon_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MenuMainActivity"
                android:label="@string/title_activity_menu_main"
                android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
                android:name=".SplashScreenActivity"
                android:noHistory="true"
                android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/welcome" />
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/title_activity_login" />
        <activity
                android:name=".SignupActivity"
                android:label="@string/title_activity_signup" />
    </application>

</manifest>