<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">

    <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="3dp"/>

    <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/progress_bar"
            android:layout_weight="1"
            android:visibility="invisible" tools:layout_editor_absoluteY="482dp" tools:layout_editor_absoluteX="-16dp">
    </WebView>

    <ImageView
            android:id="@+id/hlnt_iv_load"
            android:contentDescription="@string/desc_logo_activity"
            android:layout_width="199dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/deporte"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" android:layout_marginTop="240dp"/>

    <ImageView
            android:id="@+id/logo"
            android:contentDescription="@string/desc_logo"
            android:layout_width="283dp"
            android:layout_height="151dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/sportg_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" android:layout_marginTop="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>