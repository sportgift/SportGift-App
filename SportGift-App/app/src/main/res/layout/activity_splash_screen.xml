<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreenActivity" android:background="@color/colorPrimary">

    <ImageView
            android:id="@+id/logo"
            android:contentDescription="@string/desc_logo"
            android:layout_width="283dp"
            android:layout_height="151dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/sportg_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" android:layout_marginTop="60dp"/>

    <ImageView
            android:id="@+id/image_sport"
            android:contentDescription="@string/desc_logo_activity"
            android:layout_width="199dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/deporte"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" android:layout_marginTop="240dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>